{
  "name": "ciunkos.com",
  "version": "1.0.0",
  "description": "Personal blog and resume",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/ciunkos/ciunkos-com.git"
  },
  "scripts": {
    "clean": "node clean.js",
    "build": "npm run clean && NODE_ENV=production webpack --mode production --config webpack.config.cjs && npm run start:server",
    "check": "npm run test && npm run lint && npm run prettier:check",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier \"**/*.{js,json,md,css,scss,yml}\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:debug": "npm run prettier -- --debug-check",
    "prettier:fix": "npm run prettier -- --write",
    "print": "PUBLIC_PATH='' npm run build && node print.js",
    "start": "webpack serve --mode development --config webpack-dev-server.config.cjs --progress",
    "start:server": "node build/server.cjs",
    "switch-locale": "node switch-locale",
    "switch-locale:en": "node switch-locale en",
    "switch-locale:pl": "node switch-locale pl",
    "test": "echo 'No test specified' && exit 0"
  },
  "lint-staged": {
    "*.{js,json,md,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/eslint-parser": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^5.1.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.2.0",
    "husky": "^5.1.3",
    "isomorphic-style-loader": "^5.1.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^13.2.1",
    "mini-css-extract-plugin": "^1.3.9",
    "playwright": "^1.25.2",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "style-loader": "^2.0.0",
    "terser": "^5.15.0",
    "transfer-webpack-plugin": "^0.1.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^4.9.1",
    "webpack-stats-plugin": "^1.0.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "express": "^4.21.2",
    "glob": "^7.1.6",
    "highlight.js": "^11.5.1",
    "react": "^17.0.1",
    "react-custom-scrollbars-2": "^4.4.0",
    "react-dom": "^17.0.1",
    "react-ga": "^3.3.0",
    "react-helmet": "^6.1.0",
    "react-lowlight": "^3.0.0",
    "react-markdown": "^5.0.3"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "last 2 iOS versions"
  ],
  "locale": "en",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check"
    }
  }
}
