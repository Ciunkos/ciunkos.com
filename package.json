{
  "name": "ciunkos.com",
  "version": "1.0.0",
  "description": "Personal blog and resume",
  "repository": {
    "type": "git",
    "url": "https://github.com/ciunkos/ciunkos-com.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --config webpack-dev-server.config.js --progress --inline --colors",
    "build": "npm run build:to \"build\"",
    "build:to": "cross-env NODE_ENV=production webpack --mode production --config webpack.config.js --colors --env.production --env.path",
    "deploy": "cross-env NODE_ENV=production webpack --mode production --config webpack.config.js --progress --colors --env.production --env.path \"D:\\www\\ciunkos.com\"",
    "docker:build": "docker build -t ciunkos.com .",
    "docker:run": "docker run -p 80:80 ciunkos.com",
    "docker:run:service": "docker run --restart always -p 80:80 ciunkos.com",
    "start:server": "node build/server.js",
    "switch-locale": "node switch-locale",
    "switch-locale:en": "node switch-locale en",
    "switch-locale:pl": "node switch-locale pl",
    "test": "jest \\.test\\.js$",
    "test:snapshot": "jest \\.snapshot\\.js$ --ci -u",
    "test:snapshot:extract": "node jest/moveSnapshots.js",
    "test:visual": "node circleci-visual-regression-test && reg-cli /tmp/visual-regression/after /tmp/visual-regression/before /tmp/visual-regression/diff -R /tmp/visual-regression/index.html --ignoreChange",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"src/**/*.js\"",
    "prettier:debug": "prettier \"src/**/*.js\" --debug-check",
    "update": "ncu -x \"react-router, history\" --upgradeAll -a",
    "update:check": "ncu -x \"react-router, history\"",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "screenshot": "storybook-chrome-screenshot -p 9001 -c .storybook --silent -o /tmp/visual-regression/after"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/plugin-proposal-export-default-from": "7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "7.2.0",
    "@babel/plugin-transform-react-jsx": "7.2.0",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-stage-1": "7.0.0",
    "@storybook/addon-storyshots": "4.1.6",
    "@storybook/addons": "4.1.6",
    "@storybook/react": "4.1.6",
    "autoprefixer": "9.4.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.5",
    "circular-dependency-plugin": "5.0.2",
    "cross-env": "5.2.0",
    "css-loader": "2.1.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "eslint": "5.12.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-import-resolver-webpack": "0.10.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.12.3",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.3.1",
    "identity-obj-proxy": "3.0.0",
    "image-webpack-loader": "4.6.0",
    "isomorphic-style-loader": "4.0.0",
    "jest": "23.6.0",
    "jest-webpack-resolver": "0.3.0",
    "json-loader": "0.5.7",
    "lint-staged": "8.1.0",
    "node-sass": "4.11.0",
    "npm-check-updates": "2.15.0",
    "postcss-cssnext": "3.1.0",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "precss": "4.0.0",
    "prettier": "1.15.3",
    "raw-loader": "1.0.0",
    "react-hot-loader": "4.6.3",
    "react-test-renderer": "16.7.0",
    "react-transform-catch-errors": "1.0.2",
    "reg-cli": "0.13.1",
    "regenerator-runtime": "0.13.1",
    "sass-loader": "7.1.0",
    "storybook-addon-specifications": "2.1.2",
    "storybook-chrome-screenshot": "github:ciunkos/storybook-chrome-screenshot",
    "string-loader": "0.0.1",
    "style-loader": "0.23.1",
    "transfer-webpack-plugin": "0.1.4",
    "webpack": "4.28.1",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.2.1",
    "webpack-dev-server": "3.1.14",
    "webpack-stats-plugin": "0.2.1"
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "classnames": "2.2.6",
    "dsv-loader": "2.0.0",
    "express": "4.16.4",
    "glob": "7.1.3",
    "highlight.js": "9.13.1",
    "history": "3.2.1",
    "image-size-loader": "0.7.0",
    "isomorphic-fetch": "2.2.1",
    "nodemailer": "5.1.0",
    "react": "16.7.0",
    "react-body-classname": "1.2.0",
    "react-custom-scrollbars": "4.2.1",
    "react-dom": "16.7.0",
    "react-ga": "2.5.6",
    "react-helmet": "5.2.0",
    "react-lowlight": "2.0.0",
    "react-markdown": "4.0.6",
    "react-router": "3.0.5",
    "react-router-scroll": "0.4.4"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTest.js",
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)(spec|test|snapshot).js?(x)"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transform": {
      ".+\\.js$": "babel-jest",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|txt|md)$": "<rootDir>/jest/fileTransformer.js",
      "\\.(json)$": "<rootDir>/jest/jsonLoader.js",
      "\\.(txt|md)$": "<rootDir>/jest/rawLoader.js"
    },
    "resolver": "jest-webpack-resolver",
    "automock": false
  },
  "jestWebpackResolver": {
    "webpackConfig": "webpack-dev-server.config.js"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "last 2 iOS versions"
  ],
  "locale": "en"
}
