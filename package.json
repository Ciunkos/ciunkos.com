{
  "name": "ciunkos.com",
  "version": "1.0.0",
  "description": "Personal blog and resume",
  "repository": {
    "type": "git",
    "url": "https://github.com/ciunkos/ciunkos-com.git"
  },
  "scripts": {
    "build": "npm run build:to \"build\"",
    "build:to": "cross-env NODE_ENV=production webpack --mode production --config webpack.config.js --colors --env.production --env.path",
    "check": "npm run test && npm run lint && npm run prettier:check",
    "deploy": "cross-env NODE_ENV=production webpack --mode production --config webpack.config.js --progress --colors --env.production --env.path \"D:\\www\\ciunkos.com\"",
    "docker:build": "docker build -t ciunkos.com .",
    "docker:run": "docker run -p 80:80 ciunkos.com",
    "docker:run:service": "docker run --restart always -p 80:80 ciunkos.com",
    "docker:start": "npm run docker:build && npm run docker:run",
    "docker:start:service": "npm run docker:build && npm run docker:run:service",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier \"**/*.{js,json,md,css,scss,yml}\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:debug": "npm run prettier -- --debug-check",
    "prettier:fix": "npm run prettier -- --write",
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --config webpack-dev-server.config.js --progress --inline --colors",
    "start:server": "node build/server.js",
    "switch-locale": "node switch-locale",
    "switch-locale:en": "node switch-locale en",
    "switch-locale:pl": "node switch-locale pl",
    "test": "echo 'No test specified' && exit 0",
    "update": "ncu --upgradeAll -a",
    "update:check": "ncu"
  },
  "lint-staged": {
    "*.{js,json,md,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "devDependencies": {
    "@babel/core": "7.8.7",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/preset-env": "7.7.7",
    "@babel/preset-react": "7.7.4",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "babel-plugin-module-resolver": "4.0.0",
    "cross-env": "6.0.3",
    "css-loader": "3.4.0",
    "eslint": "6.7.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-import-resolver-babel-module": "5.1.0",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.17.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "5.0.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "3.1.0",
    "isomorphic-style-loader": "5.1.0",
    "json-loader": "0.5.7",
    "lint-staged": "9.5.0",
    "npm-check-updates": "github:przemyslawzalewski/npm-check-updates#770a9c52ac3679e9dc1cbf94ae66a91f472a7ae1",
    "prettier": "1.19.1",
    "raw-loader": "4.0.0",
    "style-loader": "1.0.2",
    "transfer-webpack-plugin": "0.1.4",
    "webpack": "4.41.4",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.1",
    "webpack-stats-plugin": "0.3.1"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "classnames": "2.2.6",
    "core-js": "3.6.0",
    "dsv-loader": "2.0.0",
    "express": "4.17.1",
    "glob": "7.1.6",
    "highlight.js": "9.17.1",
    "isomorphic-fetch": "2.2.1",
    "nodemailer": "6.4.2",
    "react": "16.12.0",
    "react-custom-scrollbars": "4.2.1",
    "react-dom": "16.12.0",
    "react-ga": "2.7.0",
    "react-helmet": "5.2.1",
    "react-lowlight": "2.0.0",
    "react-markdown": "4.2.2"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "last 2 iOS versions"
  ],
  "locale": "en",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check"
    }
  }
}
